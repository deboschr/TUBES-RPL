        </div>

        <div class="popup-form-input">
          <form class="form-input" action="" method="">
            <label for="nama">Nama:</label>
            <input type="text" id="nama" name="nama" required />
            <label for="npm">NPM:</label>
            <input type="text" id="npm" name="npm" required />
            <label for="dosenPembimbing">Dosen Pembimbing:</label>
            <input
              type="text"
              id="dosenPembimbing"
              name="dosenPembimbing"
              required
            />
            <label for="dosenPenguji">Dosen Penguji:</label>
            <input type="text" id="dosenPenguji" name="dosenPenguji" required />
            <label for="dosenPembimbing">Dosen Pembimbing:</label>
            <input
              type="text"
              id="dosenPembimbing"
              name="dosenPembimbing"
              required
            />
            <label for="password">Password:</label>
            <input type="password" id="password" name="password" required />
            <button type="submit">Submit</button>
          </form>
        </div>
      </div>
    </div>
    <script>
