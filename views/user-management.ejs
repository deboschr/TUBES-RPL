    <button id="openPopupButton">Tambah Data</button>

    <!--popup pilihan data yang ingin dimasukan-->
    <div id="popupContainer">
      <div class="popupContent">
        <span class="close" onclick="closePopup()">&times;</span>
        <h2>Pilih data yang ingin di input</h2>
        <div class="popup-pilihan">
          <ul>
            <button id="openPopupButton-mahasiswa">Mahasiswa</button>
            <!--- <a href="another-page.html"><button>Go to Another Page</button></a> -->
          </ul>
          <ul>
            <button id="openPopupButton-penguji">Dosen Penguji</button>
          </ul>
          <ul>
            <button id="openPopupButton-pembimbing">Dosen Pembimbing</button>
          </ul>
        </div>
      </div>
    </div>
    <script>
      document
        .getElementById("openPopupButton")
        .addEventListener("click", openPopup);

      function openPopup() {
        document.getElementById("popupContainer").style.display = "block";
      }

      function closePopup() {
        document.getElementById("popupContainer").style.display = "none";
      }
    </script>

    <!--popup form input data Mahasiswa-->
    <div id="popupContainer-mahasiswa">
